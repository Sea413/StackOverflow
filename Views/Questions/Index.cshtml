@{
    ViewData["Title"] = "Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

@model IEnumerable<StackOverflow.Models.Question>

<p>hello!!!!!</p>

<h2>Here is your list of Questions, @User.GetUserName()</h2>
<hr />

@if (Model.Any())
{


    <ul>
        @foreach (var listItem in Model)
        {
            <li>@Html.DisplayFor(modelItem => listItem.UserName)</li>
            <li>@Html.DisplayFor(modelItem => listItem.Description)</li>
        }
    </ul>
}
else
{
    <p>No Questions have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")